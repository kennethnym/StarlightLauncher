<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <kenneth.app.spotlightlauncher.widgets.PinnedAppsCard
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/widget_list_spacing" />

    <kenneth.app.spotlightlauncher.widgets.quicknotes.QuickNotes
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/widget_list_spacing" />

    <kenneth.app.spotlightlauncher.widgets.unitconverter.UnitConverterWidget
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>